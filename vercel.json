{
  "version": 2,
  "builds": [
    { 
      "src": "backend/index.js", 
      "use": "@vercel/node" 
    },
    {
      "src": "backend/admin-vite/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/backend/index.js" 
    },
    { 
      "src": "/health", 
      "dest": "/backend/index.js" 
    },
    { 
      "src": "/api-docs(.*)", 
      "dest": "/backend/index.js" 
    },
    { 
      "src": "/docs", 
      "dest": "/backend/index.js" 
    },
    { 
      "src": "/admin/assets/(.*)",
      "dest": "/backend/admin-vite/dist/assets/$1"
    },
    { 
      "src": "/admin/(.*\\.(js|css|png|jpg|jpeg|svg|ico|json|woff|woff2|ttf|eot|webp|map))",
      "dest": "/backend/admin-vite/dist/$1"
    },
    { 
      "src": "/admin$",
      "dest": "/backend/admin-vite/dist/index.html"
    },
    { 
      "src": "/admin/(.*)",
      "dest": "/backend/admin-vite/dist/index.html"
    },
    { 
      "src": "/", 
      "dest": "/backend/index.js" 
    }
  ]
}
