# 在 backend 目录执行，覆盖创建 .env 文件
@"
# 服务器配置
SERVER_PORT=3000
NODE_ENV=development

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=hospital_user
DB_PASSWORD=hospital123
DB_NAME=hospital

# JWT 密钥
JWT_SECRET=hospital-management-secret-key-2024

# 微信小程序配置
WX_APPID=wx_test_appid_12345
WX_SECRET=wx_test_secret_67890

# 强制禁用 RabbitMQ
DISABLE_MQ=true
MQ_ENABLED=false
USE_MQ=false
ENABLE_MESSAGE_QUEUE=false

# 跳过 RabbitMQ 初始化
SKIP_MQ_INIT=true

# 其他配置
API_PREFIX=/api
"@ | Out-File -FilePath ".env" -Encoding utf8 -Force