{
  "name": "hospital-backend",
  "version": "1.0.0",
  "description": "Hospital Registration Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "ensure-db": "node scripts/ensure_db.js",
    "dev": "node scripts/ensure_db.js && nodemon server.js",
    "build:admin": "npm --prefix admin-vite install && npm --prefix admin-vite run build",
    "build": "npm run build:admin",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha test/unit --recursive --timeout 5000 --exit",
    "test:integration": "mocha test/integration --recursive --timeout 5000 --exit",
    "test:performance": "k6 run test/performance/appointment_load_test.js",
    "test:security": "echo 'No security tests yet'",
    "test:watch": "mocha test/unit --recursive --watch",
    "test:ci": "npm run ensure-db && npm test"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3"
  }
}
