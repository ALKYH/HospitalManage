/* pages/catalog/catalog.wxss */

.catalog-container {
  padding: 0;
  background-color: #f7f9fc; /* 更清爽的浅灰蓝色背景 */
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 顶部Header - 增加艺术感渐变 */
.page-header {
  background: linear-gradient(160deg, #2b68ff 0%, #6395ff 100%); 
  color: white;
  padding: 80rpx 40rpx 60rpx 40rpx; 
  text-align: left; 
  border-radius: 0 0 40rpx 40rpx; /* 底部圆角化 */
  box-shadow: 0 10rpx 30rpx rgba(43, 104, 255, 0.2);
}

.page-title {
  display: block;
  font-size: 56rpx; 
  font-weight: 800;
  letter-spacing: 2rpx;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.85;
  letter-spacing: 1rpx;
}

/* 主内容区 */
.main-content {
  padding: 0 32rpx;
  margin-top: -30rpx; /* 向上偏移，产生悬浮感 */
}

.section {
  background-color: white;
  padding: 40rpx 32rpx; 
  border-radius: 32rpx; 
  box-shadow: 0 8rpx 24rpx rgba(149, 157, 165, 0.1); 
  margin-bottom: 32rpx;
}

/* 章节标题美化 */
.section-title {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 32rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #2b68ff; /* 侧边装饰条代替底部边框 */
}

/* 模块标题颜色 */
.patient-title { border-color: #2b68ff; color: #1a1a1a; }
.doctor-title { border-color: #1aad19; color: #1a1a1a; }
.other-title { border-color: #888; color: #1a1a1a; }

/* 网格布局优化 */
.pages-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx; 
}

/* 功能卡片 - 极简主义设计 */
.page-card {
  background: #ffffff;
  border: 2rpx solid #f1f4f9;
  border-radius: 24rpx; 
  padding: 40rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

/* 卡片点击/悬浮效果 */
.page-card:active {
  background-color: #f0f6ff;
  border-color: #2b68ff;
  transform: translateY(2rpx) scale(0.97);
  box-shadow: none;
}

.card-icon {
  font-size: 64rpx; 
  margin-bottom: 20rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.1)); /* 图标增加投影 */
}

.card-name {
  font-size: 30rpx; 
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 22rpx; 
  color: #a0aec0;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 描述文字超长时显示省略号 */
  overflow: hidden;
}

/* 底部说明 */
.footer-note {
  padding: 60rpx 0;
  text-align: center;
  color: #cbd5e0;
  font-size: 24rpx;
  letter-spacing: 1rpx;
}

/* 适配大屏幕 */
@media (min-width: 768px) {
  .pages-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}