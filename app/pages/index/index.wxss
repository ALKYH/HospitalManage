/* index.wxss */

/* === 全局与背景 === */
page {
  background-color: #f7faff;
}

.container {
  min-height: 100vh;
  position: relative;
  overflow: hidden; /* 防止背景光斑溢出 */
  display: flex;
  flex-direction: column;
  padding-bottom: 60rpx;
}

/* 背景装饰光斑 - 营造氛围 */
.bg-shape {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  z-index: 0;
  opacity: 0.6;
}

.shape-1 {
  width: 400rpx;
  height: 400rpx;
  background: #e0efff;
  top: -100rpx;
  right: -100rpx;
}

.shape-2 {
  width: 300rpx;
  height: 300rpx;
  background: #e6fcf5;
  top: 300rpx;
  left: -80rpx;
}

/* 容器层级提升，确保在光斑之上 */
.content-container, .skeleton-container {
  position: relative;
  z-index: 1;
  width: 100%;
  box-sizing: border-box;
}

/* === 骨架屏动画 === */
.skeleton-container {
  padding: 20rpx 30rpx;
}

.shimmer {
  background: #e6e8eb;
  background-image: linear-gradient(
    90deg,
    rgba(255, 255, 255, 0) 0,
    rgba(255, 255, 255, 0.5) 50%,
    rgba(255, 255, 255, 0) 100%
  );
  background-size: 600rpx 100%; /* 增加流光宽度 */
  background-repeat: no-repeat;
  animation: shimmer-ani 1.5s infinite linear;
  border-radius: 24rpx;
}

@keyframes shimmer-ani {
  0% { background-position: -600rpx 0; }
  100% { background-position: 600rpx 0; }
}

.skeleton-swiper {
  width: 100%;
  height: 380rpx;
  margin-bottom: 40rpx;
}

.skeleton-group {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.skeleton-card-lg {
  width: 100%;
  height: 180rpx;
}

.skeleton-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.skeleton-card-sm {
  height: 180rpx;
}

/* === 真实内容区域 === */

/* 入场动画 */
.fade-in-up {
  animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 点击波纹/缩放效果 */
.ripple-effect {
  transition: transform 0.15s ease-out, box-shadow 0.15s ease;
}
.ripple-effect:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1) !important; /* 强制覆盖原有阴影 */
}

/* 轮播图 */
.swiper-area {
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.header-swiper {
  height: 360rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(22, 57, 138, 0.12); /* 投影更加通透 */
  transform: translateZ(0); /* 开启硬件加速修复圆角 */
}

.swiper-item-wrap {
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
  overflow: hidden;
}

.header-image {
  width: 100%;
  height: 100%;
}

/* 大卡片组 */
.bigcard-group {
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 50rpx;
}

.bigcard {
  width: 100%;
  height: 190rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  box-shadow: 0 16rpx 36rpx rgba(0, 0, 0, 0.08);
}

/* 卡片背景装饰圈 */
.bigcard-bg-circle {
  position: absolute;
  top: -30rpx;
  right: -30rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.1);
  z-index: 0;
}

/* 挂号卡片 - 渐变蓝紫 */
.card-blue {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  box-shadow: 0 16rpx 36rpx rgba(79, 172, 254, 0.3);
}

/* 预约卡片 - 渐变薄荷绿 */
.card-green {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
  box-shadow: 0 16rpx 36rpx rgba(67, 233, 123, 0.3);
}

.bigcard-left {
  display: flex;
  align-items: center;
  z-index: 1;
}

.icon-wrap {
  width: 90rpx;
  height: 90rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  backdrop-filter: blur(10rpx); /* 玻璃质感 */
}

.card-icon {
  width: 50rpx;
  height: 50rpx;
}

.text-group {
  display: flex;
  flex-direction: column;
}

.bigcard-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 6rpx;
}

.bigcard-desc {
  font-size: 24rpx;
  color: rgba(255,255,255, 0.9);
}

.arrow-btn {
  background: rgba(255,255,255,0.9);
  color: #333;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 700;
  z-index: 1;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

/* 预约卡片的按钮文字颜色调整 */
.card-green .arrow-btn {
  color: #0ba360;
}
.card-blue .arrow-btn {
  color: #0078d4;
}


/* 网格卡片区 */
.card-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  padding: 0 30rpx;
}

.card {
  background: #ffffff;
  border-radius: 32rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 40rpx rgba(200, 210, 230, 0.2); /* 极淡的彩色投影 */
  border: 1rpx solid rgba(255,255,255,1);
}

/* 小图标背景圈 */
.icon-circle {
  width: 88rpx;
  height: 88rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.c-purple { background: #f3f0ff; }
.c-orange { background: #fff4e6; }
.c-cyan   { background: #e6fffa; }
.c-pink   { background: #fff0f6; }

.card-icon-small {
  width: 44rpx;
  height: 44rpx;
}

.card-text {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 600;
}