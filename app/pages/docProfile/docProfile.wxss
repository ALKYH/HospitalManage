/* 基础背景与布局 */
.container {
  min-height: 100vh;
  background-color: #f5f8fc;
  padding: 30rpx 0;
  box-sizing: border-box;
}

.header-bg {
  position: absolute;
  top: 0; left: 0; right: 0; height: 240rpx;
  background: linear-gradient(180deg, rgba(79, 158, 252, 0.15) 0%, rgba(245, 248, 252, 0) 100%);
  z-index: 0;
}

/* 卡片通用样式 */
.card {
  background: #ffffff;
  margin: 0 32rpx 28rpx;
  padding: 32rpx;
  border-radius: 26rpx;
  position: relative;
  z-index: 1;
}

.shadow {
  box-shadow: 0 12rpx 30rpx rgba(0, 90, 200, 0.05);
}

/* 顶部操作区 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title-line {
  font-size: 32rpx;
  font-weight: 700;
  color: #2a4368;
  display: flex;
  align-items: center;
}

.section-title-line::before {
  content: "";
  width: 8rpx; height: 32rpx;
  background: #4f9efc;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.refresh-box {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #4f9efc;
  background: rgba(79, 158, 252, 0.1);
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
}

.refresh-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 消息提示 */
.message-tip {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #7f8c99;
  text-align: center;
}

/* 病例条目样式 */
.case-item {
  border-top: 6rpx solid #4f9efc; /* 顶部强调色 */
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
}

.order-no {
  font-size: 28rpx;
  font-weight: 600;
  color: #4f9efc;
}

.visit-time {
  font-size: 24rpx;
  color: #94a3b8;
}

.divider {
  height: 2rpx;
  background: #f1f5f9;
  margin-bottom: 24rpx;
}

.doctor-info {
  margin-bottom: 24rpx;
}

.doc-label {
  font-size: 24rpx;
  color: #94a3b8;
  margin-right: 20rpx;
}

.doc-name {
  font-size: 28rpx;
  color: #2a4368;
  font-weight: 600;
}

/* 病历内容区 */
.note-section {
  background: #f8fafc;
  padding: 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid #eef2f7;
}

.note-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.note-tag {
  width: 12rpx; height: 12rpx;
  background: #4f9efc;
  border-radius: 50%;
  margin-right: 12rpx;
}

.label {
  font-size: 26rpx;
  font-weight: 700;
  color: #4a5c73;
}

.note-content {
  font-size: 28rpx;
  color: #2d3748;
  line-height: 1.6;
  white-space: pre-wrap; /* 保持换行 */
}

.item-footer {
  margin-top: 24rpx;
  text-align: right;
}

.create-at {
  font-size: 22rpx;
  color: #cbd5e0;
}

/* 空状态 */
.empty-state {
  margin-top: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #b1bdc8;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

/* 动画 */
.slide-in {
  animation: fadeInUp 0.5s ease-out forwards;
  opacity: 0;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}