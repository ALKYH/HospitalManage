/* pages/docRegister/docRegister.wxss */

/* 页面整体 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5faff 0%, #e8f2ff 100%);
  padding: 40rpx 28rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 顶部控件区 */
.controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #ffffff;
  padding: 24rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 90, 200, 0.08);
  margin-bottom: 36rpx;
}

.picker {
  font-size: 30rpx;
  color: #1a3b6b;
  font-weight: 500;
}

/* 列表区域 */
.list {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

/* 每个挂号记录卡片 */
.item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 30rpx;
  box-shadow: 0 12rpx 36rpx rgba(0, 90, 200, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.item:active {
  transform: scale(0.98);
  opacity: 0.95;
}

/* 文本信息层次 */
.item text {
  display: block;
  font-size: 30rpx;
  color: #2a4368;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.item view {
  font-size: 26rpx;
  color: #4b5c7a;
  margin-bottom: 8rpx;
}

/* 元信息（时间） */
.meta {
  color: #7c8ca5;
  font-size: 24rpx;
  margin-top: 8rpx;
  text-align: right;
}

/* 空状态 */
.list view {
  text-align: center;
  margin-top: 60rpx;
  color: #7f8c99;
  font-size: 28rpx;
}

/* 按钮统一样式 */
button {
  background: linear-gradient(90deg, #4f9efc 0%, #6bd3ff 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  padding: 0 30rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 18rpx;
  box-shadow: 0 10rpx 20rpx rgba(79, 158, 252, 0.18);
  border: none;
  transition: all 0.15s ease;
}

button:active {
  transform: translateY(2rpx);
  opacity: 0.9;
}
