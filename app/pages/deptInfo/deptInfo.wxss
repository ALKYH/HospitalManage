/* 引入订单页配色系统 */
.container {
  min-height: 100vh;
  background-color: #f5f8fc; /* 订单页背景色 */
  padding: 30rpx 0 160rpx 0;
  box-sizing: border-box;
}

.header-bg {
  position: absolute;
  top: 0; left: 0; right: 0; height: 300rpx;
  background: linear-gradient(180deg, rgba(79, 158, 252, 0.15) 0%, rgba(245, 248, 252, 0) 100%);
  z-index: 0;
}

/* 卡片基础样式 - 仿照订单 item */
.card {
  background: #ffffff;
  border-radius: 26rpx;
  margin: 0 40rpx 32rpx;
  padding: 36rpx;
  position: relative;
  z-index: 1;
}

.shadow {
  box-shadow: 0 16rpx 40rpx rgba(0, 90, 200, 0.06);
}

/* 头部卡片特有样式 */
.header-card {
  border-left: 8rpx solid #4f9efc; /* 订单页标志性侧边 */
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2a4368;
}

.subtitle-tag {
  font-size: 22rpx;
  color: #4f9efc;
  background: rgba(79, 158, 252, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 10rpx;
  margin-top: 12rpx;
  display: inline-block;
}

.btn-share-mini {
  font-size: 24rpx;
  color: #7f8c99;
  background: #f0f2f5;
  border-radius: 30rpx;
  padding: 0 24rpx;
  margin: 0;
}

.desc-text {
  font-size: 28rpx;
  color: #4a5c73;
  line-height: 1.6;
  margin: 30rpx 0;
}

.ellipsis {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 切换科室按钮 - 仿照次要按钮 */
.picker-btn {
  display: inline-flex;
  align-items: center;
  font-size: 26rpx;
  color: #7f8c99;
  border: 1rpx solid #dcdfe6;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
}

/* 医生列表 Tab */
.section-title-line {
  margin: 40rpx 40rpx 24rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #2a4368;
  display: flex;
  align-items: center;
}

.section-title-line::before {
  content: "";
  width: 8rpx;
  height: 32rpx;
  background: #4f9efc;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.doc-tab-scroll {
  white-space: nowrap;
  padding: 0 40rpx;
  margin-bottom: 30rpx;
}

.doc-tab-item {
  display: inline-flex;
  flex-direction: column;
  padding: 24rpx 32rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-right: 20rpx;
  border: 2rpx solid transparent;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.doc-tab-item.active {
  border-color: #4f9efc;
  background: #f0f7ff;
}

.doc-tab-item.active .tab-name { color: #4f9efc; }

.tab-name { font-size: 28rpx; font-weight: 600; color: #333; }
.tab-title { font-size: 22rpx; color: #999; margin-top: 4rpx; }

/* 医生详情卡片特有 */
.d-photo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  flex-shrink: 0;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.detail-main {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.d-info { margin-left: 24rpx; }
.d-name { font-size: 36rpx; font-weight: 700; color: #2a4368; }
.d-tag {
  font-size: 22rpx;
  color: #ff9500;
  background: rgba(255, 149, 0, 0.1);
  padding: 2rpx 12rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

.divider {
  height: 1rpx;
  background: #f0f2f5;
  margin: 30rpx 0;
}

.small-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #2a4368;
  margin-bottom: 12rpx;
}

.d-bio {
  font-size: 26rpx;
  color: #7f8c99;
  line-height: 1.6;
}

/* 底部操作按钮 - 对齐订单页 primary-action */
.btn-appointment {
  margin-top: 40rpx;
  background-color: #4f9efc !important;
  color: #ffffff !important;
  border-radius: 45rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(79, 158, 252, 0.3);
}

.bottom-bar {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  padding: 30rpx 40rpx;
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  z-index: 10;
}

.btn-back {
  background: #ffffff !important;
  color: #909399 !important;
  border: 1rpx solid #dcdfe6 !important;
  border-radius: 45rpx;
  font-size: 28rpx;
}

/* 动画效果 */
.slide-in {
  animation: slideUp 0.4s cubic-bezier(0.39, 0.575, 0.565, 1) forwards;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.empty-text {
  display: block;
  text-align: center;
  color: #b1bdc8;
  padding: 60rpx;
}