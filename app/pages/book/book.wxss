/* pages/book/book.wxss */
.container {
    padding: 40rpx;
    background: linear-gradient(180deg, #f0fdf7 0%, #e6fcf5 100%);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  /* 顶部标题 */
  .header {
    text-align: center;
    margin-bottom: 50rpx;
  }
  
  .main-title {
    font-size: 44rpx;
    font-weight: 800;
    color: #0d9488;
    letter-spacing: 2rpx;
  }
  
  .sub-title {
    font-size: 28rpx;
    color: #666;
    margin-top: 10rpx;
  }
  
  /* 卡片容器 */
  .card {
    width: 90%;
    background: #fff;
    border-radius: 24rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08); /* 基础阴影 */
    border: 4rpx solid transparent;
    padding: 32rpx;
    margin-bottom: 40rpx;
    transition: all 0.3s ease;
  }
  
  /* 焦点卡片样式 */
  .card.active {
    border-color: #34d399; /* 浅绿色边框高亮 */
    box-shadow: 0 10rpx 30rpx rgba(52, 211, 153, 0.2);
  }
  
  .card:active {
    transform: scale(0.99);
  }
  
  /* 卡片头部 */
  .card-header {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  /* 步骤徽章 */
  .step-badge {
    width: 48rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 50%;
    color: #fff;
    font-weight: 700;
    font-size: 28rpx;
    margin-right: 15rpx;
    background-color: #bbbbbb; /* 默认灰色 */
    transition: background-color 0.3s;
  }
  .card.active .step-badge {
    background: linear-gradient(45deg, #0d9488, #34d399); /* 激活绿色渐变 */
  }
  
  /* 卡片标题 */
  .card-title {
    font-size: 34rpx;
    font-weight: 700;
    color: #0d9488;
  }
  
  /* 卡片内容 */
  .card-content {
    display: flex;
    flex-direction: column;
    gap: 25rpx;
  }
  
  .picker-group {
    display: flex;
    flex-direction: column;
    gap: 15rpx;
  }
  
  /* 操作按钮 (科室) */
  .action-btn {
    width: 100%;
    background: linear-gradient(135deg, #34d399, #10b981);
    color: #fff;
    border-radius: 16rpx;
    padding: 18rpx 0;
    font-size: 32rpx;
    font-weight: 600;
    box-shadow: 0 6rpx 12rpx rgba(52, 211, 153, 0.3);
  }
  
  /* 选择展示框 */
  .picker-display {
    background-color: #f9f9f9;
    border-radius: 12rpx;
    padding: 25rpx 30rpx;
    font-size: 30rpx;
    color: #444;
    border: 1rpx solid #e5e5e5;
    transition: border-color 0.3s;
  }
  .card.active .picker-display {
    border-color: #34d399;
    box-shadow: 0 0 5rpx rgba(52, 211, 153, 0.2);
  }
  .disabled-text {
    color: #999;
  }
  .selected-label {
    color: #0d9488;
    font-weight: 600;
  }
  
  /* 号别列表 */
  .types-container {
    padding-top: 10rpx;
    border-top: 1rpx dashed #eee;
  }
  .sub-note {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 15rpx;
    display: block;
  }
  .types {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
  }
  .type-item {
    font-size: 26rpx;
    padding: 8rpx 16rpx;
    border-radius: 12rpx;
    background-color: #f0f0f0;
    color: #555;
    font-weight: 500;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  }
  .type-item .count-num {
    font-weight: 700;
    color: #1aad19;
    margin-left: 8rpx;
  }
  .type-item.type-active {
    background-color: #d1fae5;
    color: #1aad19;
    border: 1rpx solid #1aad19;
  }
  .type-item.type-active .count-num {
    color: #1aad19;
  }
  
  .tip-text {
    font-size: 26rpx;
    color: #ff9900;
    margin-top: 10rpx;
  }
  
  /* 挂号提交按钮 */
  .register-btn {
    width: 90%;
    padding: 28rpx 0;
    margin-top: 50rpx;
    background: #cccccc; /* 默认灰色 */
    color: #fff;
    font-size: 36rpx;
    font-weight: 600;
    border-radius: 50rpx;
    box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.1);
    letter-spacing: 2rpx;
    transition: all 0.25s ease;
  }
  
  .register-btn.ready {
    background: linear-gradient(135deg, #1aad19, #28d02e); /* 准备好后的绿色 */
    box-shadow: 0 10rpx 25rpx rgba(26, 173, 25, 0.3);
  }
  
  .register-btn:active {
    transform: scale(0.96);
  }
  
  /* 提示信息 */
  .message {
    color: #ef4444;
    margin-top: 30rpx;
    text-align: center;
    font-size: 28rpx;
  }

/* === 骨架屏样式 === */
.skeleton-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  width: 90%;
}

.skeleton-field {
  background: #ffffff;
  padding: 36rpx;
  border-radius: 24rpx;
  height: 120rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

/* 骨架屏流光效果 */
.shimmer {
  background: #f3f4f6;
  background-image: linear-gradient(
    90deg,
    rgba(255, 255, 255, 0) 0,
    rgba(255, 255, 255, 0.6) 50%,
    rgba(255, 255, 255, 0) 100%
  );
  background-size: 400% 100%;
  background-repeat: no-repeat;
  animation: shimmer-ani 1.5s infinite linear;
}
@keyframes shimmer-ani {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}