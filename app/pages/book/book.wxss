/* pages/book/book.wxss */
.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background: linear-gradient(135deg, #f0fdf7 0%, #e6fcf5 100%);
}

/* === 头部介绍 === */
.header {
  margin-bottom: 50rpx;
  padding-left: 10rpx;
}
.title {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  color: #0d9488;
  margin-bottom: 10rpx;
}
.subtitle {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
}

/* === 卡片和字段 === */
.form-wrapper {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.field-card {
  background: #ffffff;
  padding: 36rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid transparent;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

/* 焦点激活样式 */
.field-card.active {
  border-color: #34d399;
  box-shadow: 0 8rpx 24rpx rgba(52, 211, 153, 0.2);
}

.field-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.step-badge {
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  border-radius: 50%;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 700;
  margin-right: 15rpx;
  /* 基础配色 */
  background-color: #ccc;
}
.field-card.active .step-badge {
  /* 激活配色 */
  background: linear-gradient(135deg, #34d399, #10b981);
}

.label {
  color: #4b5563;
  font-size: 30rpx;
  font-weight: 600;
  flex-grow: 1;
}

.tip-text {
  font-size: 24rpx;
  color: #10b981;
  font-weight: 500;
}

.picker {
  padding: 16rpx 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  color: #1f2937;
  font-size: 32rpx;
  transition: border-color 0.3s;
}

.field-card.active .picker {
  border-color: #34d399;
}

.disabled-text {
  color: #9ca3af;
}

/* === 按钮样式 === */
.actions {
  margin-top: 50rpx;
}

.btn {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  border-radius: 45rpx;
  font-weight: 700;
  margin: 0;
}

.btn-primary {
  background: linear-gradient(135deg, #34d399 0%, #10b981 100%);
  color: #ffffff;
  box-shadow: 0 10rpx 24rpx rgba(52, 211, 153, 0.4);
  transition: all 0.2s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(52, 211, 153, 0.4);
}

.message {
  color: #ef4444;
  margin-top: 30rpx;
  text-align: center;
  font-size: 28rpx;
}

/* === 动画 === */
@keyframes fadeInDown {
  from { opacity: 0; transform: translateY(-20rpx); }
  to { opacity: 1; transform: translateY(0); }
}
@keyframes slideUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}
.fade-in-down {
  animation: fadeInDown 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
  opacity: 0;
}
.slide-up {
  animation: slideUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) 0.1s forwards;
  opacity: 0;
}

/* === 骨架屏样式 === */
.skeleton-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.skeleton-field {
  background: #ffffff;
  padding: 36rpx;
  border-radius: 24rpx;
  height: 120rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

/* 骨架屏流光效果 */
.shimmer {
  background: #f3f4f6;
  background-image: linear-gradient(
    90deg,
    rgba(255, 255, 255, 0) 0,
    rgba(255, 255, 255, 0.6) 50%,
    rgba(255, 255, 255, 0) 100%
  );
  background-size: 400% 100%;
  background-repeat: no-repeat;
  animation: shimmer-ani 1.5s infinite linear;
}
@keyframes shimmer-ani {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

/* Added for department picker consistency */
.picker-group {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-top: 10rpx;
}

.picker-display {
  font-size: 32rpx;
  color: #333;
  padding: 10rpx 0;
}

.picker-display.selected-label {
  font-weight: 600;
  color: #0d9488;
}

.action-btn {
  width: 100%;
  background: linear-gradient(135deg, #0d9488, #34d399);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 12rpx;
  padding: 20rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(13, 148, 136, 0.3);
  transition: all 0.3s;
  text-align: center;
  line-height: 1.5;
}

.action-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(13, 148, 136, 0.2);
}