/* pages/register/register.wxss */
.container {
    padding: 40rpx;
    background: linear-gradient(180deg, #e8f0ff 0%, #f9fbfd 100%);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  /* 顶部标题 */
  .header {
    text-align: center;
    margin-bottom: 50rpx;
  }
  
  .main-title {
    font-size: 44rpx;
    font-weight: 800;
    color: #2b68ff;
    letter-spacing: 2rpx;
  }
  
  .sub-title {
    font-size: 28rpx;
    color: #666;
    margin-top: 10rpx;
  }
  
  /* 卡片容器 */
  .card {
    width: 90%;
    background: #fff;
    border-radius: 24rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08); /* 基础阴影 */
    border: 4rpx solid transparent;
    padding: 32rpx;
    margin-bottom: 40rpx;
    transition: all 0.3s ease;
  }
  
  /* 焦点卡片样式 */
  .card.active {
    border-color: #6fc1ff; /* 浅蓝色边框高亮 */
    box-shadow: 0 10rpx 30rpx rgba(43, 104, 255, 0.2);
  }
  
  .card:active {
    transform: scale(0.99);
  }
  
  /* 卡片头部 */
  .card-header {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  /* 步骤徽章 */
  .step-badge {
    width: 48rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 50%;
    color: #fff;
    font-weight: 700;
    font-size: 28rpx;
    margin-right: 15rpx;
    background-color: #bbbbbb; /* 默认灰色 */
    transition: background-color 0.3s;
  }
  .card.active .step-badge {
    background: linear-gradient(45deg, #2b68ff, #6fc1ff); /* 激活蓝色渐变 */
  }
  
  /* 卡片标题 */
  .card-title {
    font-size: 34rpx;
    font-weight: 700;
    color: #2b68ff;
  }
  
  /* 卡片内容 */
  .card-content {
    display: flex;
    flex-direction: column;
    gap: 25rpx;
  }
  
  .picker-group {
    display: flex;
    flex-direction: column;
    gap: 15rpx;
  }
  
  /* 操作按钮 (科室) */
  .action-btn {
    width: 100%;
    background: linear-gradient(135deg, #2b68ff, #6fc1ff);
    color: #fff;
    border-radius: 16rpx;
    padding: 18rpx 0;
    font-size: 32rpx;
    font-weight: 600;
    box-shadow: 0 6rpx 12rpx rgba(43, 104, 255, 0.3);
  }
  
  /* 选择展示框 */
  .picker-display {
    background-color: #f9f9f9;
    border-radius: 12rpx;
    padding: 25rpx 30rpx;
    font-size: 30rpx;
    color: #444;
    border: 1rpx solid #e5e5e5;
    transition: border-color 0.3s;
  }
  .card.active .picker-display {
    border-color: #2b68ff;
    box-shadow: 0 0 5rpx rgba(43, 104, 255, 0.2);
  }
  .disabled-text {
    color: #999;
  }
  .selected-label {
    color: #2b68ff;
    font-weight: 600;
  }
  
  /* 号别列表 */
  .types-container {
    padding-top: 10rpx;
    border-top: 1rpx dashed #eee;
  }
  .sub-note {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 15rpx;
    display: block;
  }
  .types {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
  }
  .type-item {
    font-size: 26rpx;
    padding: 8rpx 16rpx;
    border-radius: 12rpx;
    background-color: #f0f0f0;
    color: #555;
    font-weight: 500;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  }
  .type-item .count-num {
    font-weight: 700;
    color: #1aad19;
    margin-left: 8rpx;
  }
  .type-item.type-active {
    background-color: #d1fae5;
    color: #1aad19;
    border: 1rpx solid #1aad19;
  }
  .type-item.type-active .count-num {
    color: #1aad19;
  }
  
  .tip-text {
    font-size: 26rpx;
    color: #ff9900;
    margin-top: 10rpx;
  }
  
  /* 挂号提交按钮 */
  .register-btn {
    width: 90%;
    padding: 28rpx 0;
    margin-top: 50rpx;
    background: #cccccc; /* 默认灰色 */
    color: #fff;
    font-size: 36rpx;
    font-weight: 600;
    border-radius: 50rpx;
    box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.1);
    letter-spacing: 2rpx;
    transition: all 0.25s ease;
  }
  
  .register-btn.ready {
    background: linear-gradient(135deg, #1aad19, #28d02e); /* 准备好后的绿色 */
    box-shadow: 0 10rpx 25rpx rgba(26, 173, 25, 0.3);
  }
  
  .register-btn:active {
    transform: scale(0.96);
  }
  
  /* 提示信息 */
  .message {
    margin-top: 40rpx;
    color: #ff4d4f;
    font-size: 28rpx;
    text-align: center;
    font-weight: 500;
  }