/* 页面背景 */
.container {
    /* 移除左右 padding，让内部卡片自己控制边距 */
    padding: 0; 
    background: #f7f9fc;
    min-height: 100vh;
    /* 确保内部元素居中对齐 */
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  /* 顶部个人信息卡 - 高光突出 */
  .profile-card {
    /* 修正宽度：使用 calc 确保在各种屏幕上都能撑满且留出边距 */
    width: calc(90% - 60rpx); 
    height: 200rpx;
    background: linear-gradient(135deg, #2b68ff 0%, #5b9df9 100%); 
    padding: 40rpx; 
    border-radius: 36rpx; 
    margin-top: 50rpx; 
    margin-bottom: 60rpx; 
    /* 确保卡片居中 */
    margin-left: 30rpx; 
    margin-right: 30rpx; 
    box-shadow: 0 15rpx 40rpx rgba(43, 104, 255, 0.45); 
    color: #fff;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center; 
    z-index: 10;
  }
  
  /* 顶部光斑（装饰性） */
  .profile-card::before {
    content: "";
    position: absolute;
    width: 300rpx; 
    height: 300rpx; 
    background: rgba(255, 255, 255, 0.2);
    top: -100rpx; 
    right: -100rpx; 
    border-radius: 50%;
    filter: blur(30rpx); 
    z-index: 1;
  }
  
  /* 头像 */
  .avatar {
    width: 120rpx; 
    height: 120rpx; 
    border-radius: 50%;
    margin-right: 30rpx; 
    border: 6rpx solid rgba(255,255,255,0.95); 
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
    flex-shrink: 0; 
    z-index: 5;
  }
  
  /* 用户信息文本区域 */
  .profile-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1; 
    z-index: 5;
  }
  
  /* 用户名 */
  .username {
    font-size: 40rpx; 
    font-weight: 700;
    line-height: 1.2; 
    /* 确保文本不被截断 */
    word-break: break-all;
  }
  
  /* 说明文字 */
  .desc {
    font-size: 26rpx; 
    opacity: 0.9;
    margin-top: 8rpx;
  }
  
  /* 个人卡片右箭头样式 */
  .arrow-profile {
    font-size: 50rpx;
    color: #fff;
    opacity: 0.95;
    margin-left: 30rpx;
    align-self: center;
    z-index: 5;
  }
  
  /* 功能列表区 */
  .list-group {
    /* 修正宽度：与 profile-card 保持一致 */
    width: calc(100% - 60rpx);
    margin-left: 30rpx; 
    margin-right: 30rpx; 
    
    margin-bottom: 40rpx;
    background-color: #fff;
    border-radius: 28rpx;
    box-shadow: 0 5rpx 20rpx rgba(0,0,0,0.06);
    padding: 0 20rpx;
  }
  
  /* 列表标题 */
  .list-title {
    font-size: 28rpx;
    color: #6c757d;
    font-weight: 600;
    padding: 20rpx 15rpx 10rpx 15rpx;
  }
  
  /* 功能列表项 */
  .card-item {
    width: 100%; 
    height: 100rpx; 
    padding: 0 15rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }
  
  /* 分隔线 */
  .card-item:not(:last-child)::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 15rpx;
    right: 15rpx;
    height: 1rpx;
    background-color: #f0f0f0;
  }
  
  /* 卡片点击效果 */
  .card-item:active {
    background-color: #f7f7f7;
  }
  
  /* 列表 icon */
  .item-icon {
    width: 50rpx; 
    height: 50rpx;
    margin-right: 25rpx;
    flex-shrink: 0;
  }
  
  /* 列表标题 */
  .item-text {
    font-size: 30rpx; 
    font-weight: 500;
    flex: 1;
    text-align: left;
    color: #333; 
  }
  
  /* 医生入口特殊样式 */
  .item-text.doctor {
    color: #1aad19;
  }
  .item-icon.doctor {
    /* 移除滤镜，使用原始图标 */
  }
  
  /* 右箭头 */
  .arrow-item {
    font-size: 36rpx; 
    color: #ccc;
    font-weight: 700;
    margin-left: 20rpx;
    flex-shrink: 0;
  }