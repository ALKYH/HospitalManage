/* pages/orders/orders.wxss */

/* 页面背景和布局 */
.container {
  min-height: 100vh;
  padding: 0 40rpx 40rpx 40rpx;
  box-sizing: border-box;
  background-color: #f5f8fc;
  display: flex;
  flex-direction: column;
}

/* 顶部提示消息 (优化样式) */
.message {
  font-size: 28rpx;
  color: #c0392b;
  background: #fef0f0;
  padding: 20rpx 28rpx;
  border-radius: 20rpx;
  border-left: 8rpx solid #f56c6c;
  margin: 30rpx 0;
  box-shadow: 0 4rpx 15rpx rgba(245, 108, 108, 0.15);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* --- 2. 分类选项卡样式 (修复点击问题) --- */
.tab-bar {
  width: 100%;
  height: 100rpx;
  margin: 20rpx 0 40rpx 0;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08);
  
  /* 粘性定位 */
  position: sticky;
  top: 0;
  z-index: 999; /* 提高层级，确保在顶部不被遮挡 */
  overflow: hidden; 
}

.tab-list {
  display: flex;
  flex-direction: row;
  height: 100%;
  align-items: center; 
  padding: 0 10rpx;
  min-width: 100%; /* 确保填满滚动区域 */
}

.tab-item {
  display: flex; 
  align-items: center;
  justify-content: center;
  height: 100%; /* 充满高度，增加点击区域 */
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #7f8c99;
  position: relative;
  transition: color 0.3s ease;
  flex-shrink: 0; 
  font-weight: 500;
}

.tab-item.active {
  color: #4f9efc;
  font-weight: 600;
}

/* 选项卡激活下划线动画 */
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60%;
  height: 6rpx;
  background-color: #4f9efc;
  border-radius: 3rpx;
  transition: width 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.tab-count {
  font-size: 22rpx;
  padding: 2rpx 10rpx;
  margin-left: 8rpx;
  background-color: #f0f2f5;
  color: #7f8c99;
  border-radius: 16rpx;
  transition: background-color 0.3s, color 0.3s;
}

.tab-item.active .tab-count {
  background-color: #4f9efc;
  color: #ffffff;
}

/* --- 3. 订单卡片样式 --- */
.order-item {
  background: #ffffff;
  padding: 36rpx;
  border-radius: 26rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 16rpx 40rpx rgba(0, 90, 200, 0.08);
  border-left: 8rpx solid #e0e0e0; /* 状态配色由 JS 注入 */
  transition: all 0.3s ease-in-out;
  transform: translateY(0);
  /* 入场动画 */
  animation: slideIn 0.4s cubic-bezier(0.39, 0.575, 0.565, 1) forwards;
  opacity: 0;
}

/* 卡片入场动画 */
@keyframes slideIn {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 卡片按压/点击效果 */
.order-item:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 20rpx rgba(0, 90, 200, 0.1);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.order-status-tag {
  font-size: 26rpx;
  font-weight: bold;
  padding: 8rpx 18rpx;
  border-radius: 18rpx;
  min-width: 140rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.order-id {
  font-size: 24rpx;
  color: #b1bdc8;
  font-weight: 500;
}

/* 核心信息 */
.main-info {
  margin-bottom: 30rpx;
}

.doctor-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #2a4368;
  margin-bottom: 10rpx;
}

.appointment-time {
  font-size: 30rpx;
  color: #4a5c73;
  display: flex;
  align-items: center;
}

.time-slot {
  margin-left: 15rpx;
  padding: 4rpx 14rpx;
  background-color: #f0f2f5;
  border-radius: 12rpx;
  font-weight: 600;
  color: #4f9efc;
}

/* 分隔线 */
.divider {
  height: 1rpx;
  background-color: #f0f2f5;
  margin: 20rpx 0;
}

/* 详细信息行 */
.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.detail-label {
  color: #7f8c99;
}

.detail-value {
  font-weight: 500;
  color: #2a4368;
}

.paid-time {
  font-size: 24rpx;
  color: #67c23a;
  margin-left: 10rpx;
}

.unpaid-notice {
  font-size: 24rpx;
  color: #f56c6c;
  margin-left: 10rpx;
  font-weight: bold;
}

.waitlist-position {
  color: #ff9900;
  font-weight: bold;
}

/* 操作按钮组 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 30rpx;
}

.action-button {
  height: 68rpx;
  line-height: 68rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  border-radius: 34rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

/* 主要操作按钮 (去支付) */
.primary-action {
  background-color: #4f9efc;
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(79, 158, 252, 0.4);
}

.primary-action:active {
  background-color: #3a8ee6;
}

/* 次要操作按钮 (取消/退号) */
.secondary-action {
  background-color: #ffffff;
  color: #909399;
  border: 1rpx solid #dcdfe6;
}

.secondary-action:active {
  background-color: #f4f4f5;
}

/* --- 4. 空订单提示 --- */
.empty-state {
  text-align: center;
  margin-top: 100rpx;
  color: #7f8c99;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  animation: pulse 1.5s infinite ease-in-out;
}

@keyframes pulse {
  0% { transform: scale(1); opacity: 0.8; }
  50% { transform: scale(1.05); opacity: 1; }
  100% { transform: scale(1); opacity: 0.8; }
}