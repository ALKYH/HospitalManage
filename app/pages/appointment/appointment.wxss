/* pages/appointment/appointment.wxss */

/* === 全局布局 === */
.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background: linear-gradient(135deg, #f6f7f9 0%, #eef1f5 100%);
  position: relative;
  overflow: hidden;
}

/* 背景光斑 */
.bg-blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  z-index: 0;
  opacity: 0.6;
}
.blob-1 { width: 300rpx; height: 300rpx; background: #dceefc; top: -50rpx; right: -50rpx; }
.blob-2 { width: 400rpx; height: 400rpx; background: #fdf6ec; bottom: 100rpx; left: -100rpx; }

/* 提升内容层级 */
.list-container, .skeleton-container, .global-msg {
  position: relative;
  z-index: 1;
}

/* === 全局消息 === */
.global-msg {
  background: #fef0f0;
  color: #f56c6c;
  padding: 20rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  box-shadow: 0 4rpx 12rpx rgba(245, 108, 108, 0.1);
}

/* === 卡片通用样式 === */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0,0,0,0.02);
  transition: all 0.3s ease;
}

/* 激活状态卡片 (有号源) */
.card-active {
  border: 2rpx solid #67c23a;
  background: #f0f9eb;
  box-shadow: 0 12rpx 32rpx rgba(103, 194, 58, 0.15);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.doctor-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 4rpx;
}

.dept-name {
  font-size: 24rpx;
  color: #909399;
  background: #f4f4f5;
  display: inline-block;
  padding: 2rpx 12rpx;
  border-radius: 8rpx;
}

.status-badge {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.divider {
  height: 1rpx;
  background: #ebeef5;
  margin-bottom: 24rpx;
}

.card-active .divider {
  background: rgba(103, 194, 58, 0.2);
}

/* 卡片主体 */
.card-body {
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.label { color: #8c939d; }
.value { color: #606266; font-weight: 500; }
.date-text { color: #2c3e50; font-weight: 600; }
.slot-text { color: #409eff; }
.wait-text { color: #e6a23c; font-weight: bold; }

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.action-tip {
  font-size: 24rpx;
  color: #67c23a;
  font-weight: 600;
}

.expired-tip {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #c0c4cc;
}

/* 按钮样式 */
.btn {
  font-size: 28rpx;
  padding: 0 36rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 34rpx;
  margin: 0;
  font-weight: 600;
}

.btn-primary {
  background: linear-gradient(135deg, #67c23a 0%, #529b2e 100%);
  color: white;
  box-shadow: 0 6rpx 16rpx rgba(103, 194, 58, 0.3);
}

.btn-ghost {
  background: transparent;
  color: #909399;
  border: 1rpx solid #dcdfe6;
  width: 100%; /* 单个按钮时撑满 */
}

/* 动画：脉冲 (用于高亮按钮) */
.pulse-anim {
  animation: pulse 2s infinite;
}
@keyframes pulse {
  0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(103, 194, 58, 0.4); }
  70% { transform: scale(1.02); box-shadow: 0 0 0 10rpx rgba(103, 194, 58, 0); }
  100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(103, 194, 58, 0); }
}

/* 动画：上浮入场 */
.slide-up {
  animation: slideUp 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  opacity: 0;
  transform: translateY(30rpx);
}
@keyframes slideUp {
  to { opacity: 1; transform: translateY(0); }
}

.fade-in {
  animation: fadeIn 0.4s ease forwards;
}
@keyframes fadeIn {
  from { opacity: 0; } to { opacity: 1; }
}

/* === 骨架屏样式 === */
.skeleton-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  height: 240rpx;
}

.sk-header { width: 60%; height: 40rpx; background: #f2f2f2; margin-bottom: 30rpx; border-radius: 8rpx; }
.sk-body { width: 100%; height: 80rpx; background: #f7f7f7; margin-bottom: 30rpx; border-radius: 8rpx; }
.sk-footer { width: 30%; height: 60rpx; background: #f2f2f2; float: right; border-radius: 30rpx; }

.shimmer {
  position: relative;
  overflow: hidden;
}
.shimmer::after {
  content: '';
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.5), transparent);
  transform: translateX(-100%);
  animation: loading 1.5s infinite;
}
@keyframes loading {
  100% { transform: translateX(100%); }
}

/* === 空状态 === */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
}
.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.7;
}
.empty-state text {
  color: #909399;
  font-size: 28rpx;
}