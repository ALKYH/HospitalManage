/* 基础容器 */
.container {
  min-height: 100vh;
  background-color: #f5f8fc;
  position: relative;
  padding-bottom: 60rpx;
}

.header-bg {
  position: absolute;
  top: 0; left: 0; right: 0; height: 160rpx;
  background: linear-gradient(180deg, rgba(79, 158, 252, 0.1) 0%, rgba(245, 248, 252, 0) 100%);
}

.main-content {
  position: relative;
  z-index: 1;
  padding-top: 30rpx;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 26rpx;
  margin: 0 32rpx 24rpx;
  padding: 32rpx;
}

.shadow {
  box-shadow: 0 12rpx 30rpx rgba(0, 90, 200, 0.05);
}

/* 标题修饰 */
.section-title-line {
  font-size: 30rpx;
  font-weight: 700;
  color: #2a4368;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}
.section-title-line::before {
  content: "";
  width: 6rpx; height: 28rpx;
  background: #4f9efc;
  margin-right: 12rpx;
  border-radius: 4rpx;
}

/* 选择器美化 */
.picker-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f8fafc;
  padding: 24rpx 30rpx;
  border-radius: 16rpx;
  border: 1rpx solid #e2e8f0;
}
.placeholder { color: #a0aec0; font-size: 28rpx; }
.value { color: #2d3748; font-size: 28rpx; font-weight: 500; }
.arrow-down {
  width: 12rpx; height: 12rpx;
  border-right: 3rpx solid #cbd5e0;
  border-bottom: 3rpx solid #cbd5e0;
  transform: rotate(45deg);
}

/* 患者摘要区 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.p-name { font-size: 36rpx; font-weight: 700; color: #2a4368; }
.p-tag {
  font-size: 20rpx; color: #4f9efc;
  background: rgba(79, 158, 252, 0.1);
  padding: 2rpx 12rpx; border-radius: 6rpx; margin-left: 12rpx;
}
.order-status-tag {
  font-size: 24rpx; padding: 4rpx 16rpx; border-radius: 10rpx;
}
.order-status-tag.blue { background: #ebf4ff; color: #4f9efc; }

.divider { height: 2rpx; background: #f1f5f9; margin: 24rpx 0; }

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}
.i-label { font-size: 24rpx; color: #94a3b8; display: block; }
.i-value { font-size: 26rpx; color: #4a5c73; font-weight: 500; }

/* 编辑器美化 */
.editor-container {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 20rpx;
  border: 1rpx solid #e2e8f0;
}
.note-textarea {
  width: 100%;
  min-height: 350rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #2d3748;
}
.word-count {
  text-align: right;
  font-size: 22rpx;
  color: #cbd5e0;
  margin-top: 10rpx;
}

/* 按钮美化 */
.primary-action-btn {
  margin-top: 40rpx;
  background: #4f9efc !important;
  color: #ffffff !important;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(79, 158, 252, 0.3);
}

/* 动画 */
.slide-in {
  animation: slideUp 0.4s ease-out forwards;
  opacity: 0;
}
@keyframes slideUp {
  from { opacity: 0; transform: translateY(30rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.empty-state {
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty-text { color: #94a3b8; font-size: 28rpx; margin-top: 20rpx; }