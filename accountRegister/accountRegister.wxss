.container { padding: 24rpx; }
.logo-area { text-align: center; margin-top: 60rpx; }
.logo { width: 160rpx; height: 160rpx; }
.app-title { display: block; font-size: 28rpx; margin-top: 12rpx; }
.login-card { background: #fff; padding: 24rpx; margin-top: 30rpx; border-radius: 8rpx; }
.input-group { margin-bottom: 18rpx; }
.label { display: block; font-size: 24rpx; margin-bottom: 8rpx; }
.input { width: 100%; height: 64rpx; padding: 12rpx; border: 1rpx solid #eee; border-radius: 6rpx; }
.login-btn { width: 100%; height: 72rpx; background: #1aad19; color: #fff; line-height: 72rpx; text-align: center; border-radius: 8rpx; }
.link-area { margin-top: 12rpx; text-align: center; }
.link { color: #1aad19; }
.footer { text-align: center; margin-top: 30rpx; color: #888; }
